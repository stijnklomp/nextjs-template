{
	"name": "nextjs-template",
	"description": "Project template for creating web applications with Typescript and NextJs",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "NODE_OPTIONS=--experimental-vm-modules npx jest test",
		"test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest test --watch",
		"test:coverage": "jest --coverage",
		"test:acceptance": "gauge run tests/acceptance/specs/",
		"lint": "next lint",
		"docs": "rimraf doc/code && typedoc",
		"prepare": "husky install"
	},
	"dependencies": {
		"next": "^13.4.12",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@getgauge/cli": "^1.5.4",
		"@types/jest": "^29.5.3",
		"@types/node": "^20.4.7",
		"@types/react": "^18.2.18",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.46.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-next": "^13.4.12",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-import": "^2.28.0",
		"eslint-plugin-jest": "^27.2.3",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.33.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.3",
		"jest": "^29.6.2",
		"prettier": "^2.8.8",
		"react-test-renderer": "^18.2.0",
		"sass": "^1.64.2",
		"stijnklomp-eslint-config": "^2.0.1",
		"taiko": "^1.3.10",
		"ts-jest": "^29.1.1",
		"typedoc": "^0.24.8",
		"typescript": "^5.1.6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,scss}": [
			"prettier --write"
		]
	}
}
